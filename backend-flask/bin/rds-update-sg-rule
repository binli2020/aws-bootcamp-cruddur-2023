#! /usr/bin/bash

CYAN='\033[1;36m'
NO_COLOR='\033[0m'
LABEL="rds-update-sg-rule"
printf "${CYAN}== ${LABEL}${NO_COLOR}\n"

export IDE_IP=$(curl ifconfig.me)
export DB_SG_ID="sg-04e2bf6197d33fbc3"
export DB_SG_RULE_ID="sgr-07b1e202b52cffe56"

aws ec2 modify-security-group-rules \
    --group-id $DB_SG_ID \
    --security-group-rules "SecurityGroupRuleId=$DB_SG_RULE_ID,SecurityGroupRule={Description=Codespaces,IpProtocol=tcp,FromPort=5432,ToPort=5432,CidrIpv4=$IDE_IP/32}"